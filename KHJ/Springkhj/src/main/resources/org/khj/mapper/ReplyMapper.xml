<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.khj.mapper.ReplyMapper">
	<insert id="write">
		insert into reply(bno,reply,replyer)
		values (#{bno},#{reply},#{replyer})
	</insert>
	
	<select id= "list" resultType = "org.khj.domain.ReplyDTO">
		select * from reply where bno =#{bno}
	</select>
	
	<select id="detail" resultType = "org.khj.domain.ReplyDTO">
		select * from reply where rno =#{rno}
	</select>
</mapper>